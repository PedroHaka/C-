#include <stdlib.h>
#include <stdio.h>
#include <math.h>
#include <conio.h>

int i;
float graos, soma;

int main()
{
   system("color 0b");

graos=1;
soma=0;
   for(i=1; i<16 ; i++)
   {

      graos = 2 * graos;
      soma =  soma + graos;

   }

printf("  A quantidade de graos que o monge recebe: %.1f\n", soma);
system("pause");
return(0);
}


