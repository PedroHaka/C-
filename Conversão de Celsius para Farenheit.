/* Bibliotecas */
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

/* Vari√°veis */
float f, c;

/* Corpo do programa */
void main()
{
system("cls");
system("color 3c");
printf("  Este algoritmo recebe um valor em graus Celsius e converte em Farenheit.\n");
printf("  Insira o valor em graus Celsius, admitindo valores decimais.\n");
fflush(stdin);
scanf("%f", &c);
f = (c * 1.8) + 32;
printf("  O valor de temperatura inserido corresponde a %f Farenheit.\n", f);
system("pause");
}
