/* Bibliotecas */
#include <stdio.h>
#include <stdlib.h>
#include <math.h>


/* Vari√°veis */
float altura, peso;
char sex;


/* Corpo do programa */

int main()
{
    system("color 4f");
	printf("  Digite sua altura, em metros: ");
	fflush(stdin);
	scanf("%f", &altura);
	printf("\n  Qual o seu sexo? Tecle 'm' para masculino ou 'f' para feminino:  ");
	fflush(stdin);
	scanf("%c", &sex);
	if(sex == 'm')
    {
		peso =  (altura * 72.7) - 58;
		printf("\n  Seu peso ideal vale:%.2f kg", peso);
	}
	if(sex == 'f')
    {
        peso = (altura * 62.1) - 44.7;
        printf("\n  Seu peso ideal vale:%.2f kg", peso);
    }
	return (0);
}
