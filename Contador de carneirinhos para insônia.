#include <stdlib.h>
#include <stdio.h>
#include <conio.h>
#include <math.h>

int main ()
{
   int lambs;
   char sono;

   for (lambs=-1, sono='N'; sono=='N'; lambs++)
   {
      printf("\n  Ja dormi? [S] para sim e [N] para nao.");
      sono = getche ();
   }
   printf("\n  Precisei contar %i carneirinhos =) zZzZzZ...", lambs);
   getch();
   return (0);
}
