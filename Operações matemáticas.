/* Bibliotecas */
#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

/* Corpo do programa */
void main(){
    /* Definição de variaveis */
    int a = 27, b = 34;

    /* soma */
    printf("\n A soma entre a e b = %d", a+b);/* para mostrar os valores numéricos, substituir a e b por %d, e depois das aspas duplas escrever a,b,
    ("\n A soma de %d e %d = %d",a,b,a+b) */

    /* subtração */
    printf("\n A subtracao entre a e b = %d", a-b);

     /* multiplicação */
    printf("\n A multiplicacao entre a e b = %d", a*b);

    /* divisão */
    printf("\n A divisao entre a e b = %d", a/b);

    /* resto da divisão */
    printf("\n O resto da divisao entre a e b = %d", a%b);

    /* valor absoluto (módulo, valor sempre positivo) */
    printf("\n O valor absoluto de -3 = %d", abs(-3));



}
