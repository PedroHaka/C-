/* Bibliotecas */
#include <stdlib.h>
#include <stdio.h>
#include <math.h>

/* Vari√°veis */
float sala, salanovo;

/* Corpo do Programa */
void main()
{
system("cls");
system("color 5e");
printf("  Este algoritmo calcula um reajuste de 25 por cento de um salario inserido.\n");
printf("  Insira aqui o valor em reais do salario:");
fflush(stdin);
scanf("%f", &sala);
salanovo = sala * 1.25;
printf("\n  Valor salarial reajustado:%f\n", salanovo);
system("pause");

}
