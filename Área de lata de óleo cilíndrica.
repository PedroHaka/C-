/* Bibliotecas */
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

/* Variaveis */
  float volume, r, altura;

/* Corpo do programa */
  void main()
  {
  system("cls");
  system("color 4f");
  printf("  Este algoritmo calcula o volume de uma lata cilindrica de oleo, a partir dos valores em metros de acordo com o SI.\n");
  printf("  Informe a altura da lata em metros: \n");
  fflush(stdin);
  scanf("%f", &altura);
  printf("  Agora informe o valor em metros, do raio da base da lata: \n");
  fflush(stdin);
  scanf("%f", &r);
  volume = 3.14159 * (r * r) * altura;
  printf("  O volume em metros da lata vale:%f metros cubicos.\n", volume);
  system("pause");

  }
