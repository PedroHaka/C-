/* Bibliotecas */
#include <stdlib.h>
#include <stdio.h>
#include <math.h>

/* Variáveis */
float adenasc, aatual, years, months, days, weeks;

/* Corpo do programa */
void main()
{
system("cls");
system("color 6f");
printf("  Este algoritmo recebe o ano de nascimento de uma pessoa e o ano atual, e calcula a idade da pessoa em anos, meses, dias e semanas.\n");
printf("  Insira o ano de nascimento:");
fflush(stdin);
scanf("%f", &adenasc);
printf("\n  Insira o ano atual:");
fflush(stdin);
scanf("%f", &aatual);
years = aatual - adenasc;
months = years * 12;
days = years * 365; /* Achei melhor esta opção do que days = months * 30, pois nao é todo mês que possui 30 dias, precisando melhor o calculo. */
weeks = days / 7;
printf("  A idade em anos:%f", years);
printf("\n  A idade em meses:%f", months);
printf("\n  A idade em dias:%f", days);
printf("\n  A idade em semanas:%f\n", weeks);
system("pause");

}
